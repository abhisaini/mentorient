border-radius:10px 10px 0 0;
font-weight : bold;
}

hr {
margin:10px -50px;
border:0;
border-top:1px solid #ccc
}
input[type=text],textarea {
width:100%;
padding:10px;
margin-top:30px;
border:2.5px solid #ccc;
color : rgb(100,100,100);
padding-left:40px;
font-size:18px;
font-weight:100;
font-family:'Acme', sans-serif;
margin-bottom : 5px;
}
#checkbox{
margin-top:5px;
}
input[type=text]:focus,textarea:focus {
    border-color: lightgreen;
}


#email,#password {
background-repeat:no-repeat;
background-position:5px 7px ;
height : 100%;
}
#email{
	background-image:url(http://www.aorank.com/tutorial/createpopupform_livedemo/images/name.jpg);
}
#password{
	background-image:url(https://hostimage.000webhostapp.com/uploads/pass(1).png);

}
#submit {text-decoration:none;
width:100%;
text-align:center;
display:block;
background-color: #1f4fc0 ;
color:#fff;
border:1px solid  #1f4fc0 ;
padding:10px 0;
font-size:20px;
cursor:pointer;
border-radius:2px ;
margin-top : 20px;

margin-bottom : 20px;
}
#submit:hover{
	color: #1f4fc0;
	background-color: #fff;
}
span {
color:red;
font-weight:700
}
button {
width:10%;
height:45px;
border-radius:3px;
background-color:#cd853f;
color:#fff;
font-family:'Acme',sans-serif;
font-size:18px;
cursor:pointer
}
.bottomText{
color:rgb(100,100,100);
font-size:18px;
padding:2px;
margin-top:3px;
}
.text-Validation{
color:rgb(250,0,0);
font-size:17px;
padding:2px;
margin-top:3px;
}

</style>



<script>

</script>

<!-- Body Starts Here -->

<div id="abc">
    <!-- Popup Div Starts Here -->
    <div id="popupContact">
        <!--  Login Form -->
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" id="form" method="post"  target="_blank">
            <h2 id="formHead">Login to your Account</h2>
                <hr />
                <div asp-validation-summary="All" class="text-Validation"> </div>
                <!--Email -->
                <input id="email" asp-for="Email" placeholder="Enter Your Email" type="text" />
                <span asp-validation-for="Email" class="text-Validation" style="font-weight:normal;"> </span>

                <!-- Password -->
                <input id="password" asp-for="Password" placeholder="Enter Your Password" type="text" />
                <span asp-validation-for="Password" class="text-Validation" style="font-weight:normal;"> </span> <br>

                <!--- Remember me -->
                <input type="checkbox" id="checkbox" asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                <button type="submit" id="submit">Login</button>
                <ul>
	               <li class="bottomText">
                       <a asp-action="ForgotPassword">Forgot Password</a>
                    </li>
                    <li class="bottomText">
                    	<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">New User?Want to Register </a>
                    </li>
                </ul>

        </form>
    </div>
    <!-- Popup Div Ends Here -->
</div>
<!-- Display Popup Button -->

